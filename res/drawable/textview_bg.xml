<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >

    <!-- 设置背景的填充色 -->
    <solid android:color="@color/gray" />
    <!-- 设置圆角 -->
    <corners android:radius="30dp" />
    <!-- 设置描边 -->
    <stroke
        android:width="10dp"
        android:color="#147822" />
    <!-- 设置内间距 -->
    <padding
        android:bottom="2dp"
        android:left="3dp"
        android:right="4dp"
        android:top="5dp" />
    <!-- 渐变色 -->
    <gradient
        android:centerColor="#569FE3"
        android:endColor="#0664C6"
        android:startColor="#1DA4E4" />

</shape>